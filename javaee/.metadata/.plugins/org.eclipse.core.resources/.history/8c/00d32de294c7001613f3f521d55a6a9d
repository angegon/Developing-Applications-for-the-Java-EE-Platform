package servlets;

import java.io.IOException;

import javax.servlet.RequestDispatcher;
import javax.servlet.ServletException;
import javax.servlet.annotation.WebServlet;
import javax.servlet.http.HttpServlet;
import javax.servlet.http.HttpServletRequest;
import javax.servlet.http.HttpServletResponse;

@WebServlet("/comprobarPassword")
public class comprobarPassword extends HttpServlet {
	private static final long serialVersionUID = 1L;


	protected void service(HttpServletRequest request, HttpServletResponse response) throws ServletException, IOException {

		String usuario = request.getParameter("usuario");
		String password = request.getParameter("password");
		RequestDispatcher rd;
		
		if (password.equals("curso")){
			rd = request.getRequestDispatcher("S2?usuario="+usuario);
		} else{
			rd = request.getRequestDispatcher("S2?password="+password);
		}
		
		rd.forward(request, response);
		
	}

}
