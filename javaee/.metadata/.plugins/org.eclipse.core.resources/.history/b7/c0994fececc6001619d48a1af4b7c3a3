package servlets;

import java.io.IOException;
import java.io.PrintWriter;

import javax.servlet.ServletException;
import javax.servlet.annotation.WebServlet;
import javax.servlet.http.HttpServlet;
import javax.servlet.http.HttpServletRequest;
import javax.servlet.http.HttpServletResponse;


@WebServlet("/S2")
public class S2 extends HttpServlet {

	protected void service(HttpServletRequest request, HttpServletResponse response) throws ServletException, IOException {

		String datoRecibidodeservlet1 = request.getParameter("dato");
		String otroDato = request.getParameter("otro");
		try ( PrintWriter out = response.getWriter();){		//Entre los métodos del response, parametro.
			out.println("<html>");
			out.println("<body>");
			out.println("<h1>Bienvenido a Servlet 2</h1>"+datoRecibidodeservlet1+otro);
			out.println("</body>");
			out.println("</html>");
		}
		
		
	}

}
